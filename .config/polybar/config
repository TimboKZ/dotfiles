[colors]
background = #9910021b
background-active = #591f6d
foreground = #fff
foreground-alt = #9751ae
border = #591f6d
urgent-workspace = #bd2c40
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/base]
monitor = ${env:MONITOR:}
scroll-down = i3wm-wsprev
scroll-up = i3wm-wsnext
fixed-center = false
font-0 = "Open Sans:size=11;0"
font-1 = FontAwesome5Free:style=Solid:size=11;1
font-2 = FontAwesome5Free:style=Regular:size=11;1
font-3 = FontAwesome5Brands:style=Regular:size=11;1
font-4 = Symbola:style=Regular:size=11;1
background = ${colors.background}
foreground = ${colors.foreground}
module-margin = 2
width = 100%
height = 30

[bar/top]
inherit = bar/base
bottom = false
border-bottom-size = 3
border-bottom-color = ${colors.border}
tray-position = right
tray-padding = 2
padding-right = 1
modules-left = i3 mpd
modules-center = xwindow
modules-right = xkeyboard pulseaudio date time

[bar/bottom]
inherit = bar/base
bottom = true
border-top-size = 3
border-top-color = ${colors.border}
tray-position = none
padding-left = 2
padding-right = 2
module-margin-left = 4
modules-left = filesystem
modules-center = wireless
modules-right = cpu system-nvidia-smi memory temperature

[module/i3]
type = internal/i3
base-padding = 2
index-sort = true
pin-workspaces = true
wrapping-scroll = false
label-mode-foreground = ${colors.foreground}
label-mode-background = ${colors.primary}
label-mode-padding = ${self.base-padding}
label-focused = %index%
label-focused-background = ${colors.background-active}
label-focused-padding = ${self.base-padding}
label-focused-underline =
label-unfocused = %index%
label-unfocused-padding = ${self.base-padding}
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-padding = ${self.label-focused-padding}
label-visible-underline = 
label-urgent = %index%
label-urgent-background = ${colors.urgent-workspace}
label-urgent-padding = ${self.label-focused-padding}

[module/xwindow]
type = internal/xwindow
label = %title:0:300:...%
format-underline = ${colors.border}

[module/mpd]
type = internal/mpd
interval = 1
host = 127.0.0.1
port = 6600

; Available tags:
;   <label-song> (default)
;   <label-time>
;   <bar-progress>
;   <toggle> - gets replaced with <icon-(pause|play)>
;   <toggle-stop> - gets replaced with <icon-(stop|play)>
;   <icon-random>
;   <icon-repeat>
;   <icon-repeatone> (deprecated)
;   <icon-single> - Toggle playing only a single song. Replaces <icon-repeatone>
;   <icon-consume>
;   <icon-prev>
;   <icon-stop>
;   <icon-play>
;   <icon-pause>
;   <icon-next>
;   <icon-seekb>
;   <icon-seekf>
format-online = <icon-prev> <icon-seekb> <icon-stop> <toggle> <icon-seekf> <icon-next>  <icon-repeat> <icon-random>  <bar-progress> <label-time>  <label-song>
;format-playing = ${self.format-online}
;format-paused = ${self.format-online}
;format-stopped = ${self.format-online}

; Available tags:
;   <label-offline>
; Default: ""
;format-offline = <label-offline>

; Available tokens:
;   %artist%
;   %album-artist%
;   %album%
;   %date%
;   %title%
; Default: %artist% - %title%
label-song = ùÑû %artist% - %title%

; Available tokens:
;   %elapsed%
;   %total%
; Default: %elapsed% / %total%
;label-time = %elapsed% / %total%

; Available tokens:
;   None
label-offline = üéú mpd is offline

; Only applies if <icon-X> is used
icon-play = ‚èµ
icon-pause = ‚è∏
icon-stop = ‚èπ
icon-prev = ‚èÆ
icon-next = ‚è≠
icon-seekb = ‚è™
icon-seekf = ‚è©
icon-random = üîÄ
icon-repeat = üîÅ
icon-repeatone = üîÇ
icon-single = üîÇ
icon-consume = ‚úÄ

; Used to display the state of random/repeat/repeatone/single
; Only applies if <icon-[random|repeat|repeatone|single]> is used
toggle-on-foreground = #ff
toggle-off-foreground = #55

; Only applies if <bar-progress> is used
bar-progress-width = 45
bar-progress-indicator = |
bar-progress-fill = ‚îÄ
bar-progress-empty = ‚îÄ

[module/xkeyboard]
type = internal/xkeyboard
format-prefix = "ÔÑú "
format-prefix-foreground = ${colors.foreground-alt}
format-spacing = 0
label-layout = %name%
label-layout-padding = 1
label-indicator = %name%
label-indicator-padding = 2
label-indicator-background = ${colors.background-active}

[module/pulseaudio]
type = internal/pulseaudio
use-ui-max = true
interval = 5

[module/date]
type = internal/date
interval = 20
format-prefix = "ÔÅ≥  "
format-prefix-foreground = ${colors.foreground-alt}
date = %Y-%m-%d
label = %date%

[module/time]
type = internal/date
interval = 5.0
format-prefix = "ÔÄó  "
format-prefix-foreground = ${colors.foreground-alt}
time = %H:%M
label = %time%

[module/filesystem]
type = internal/fs
interval = 15
mount-0 = /
mount-1 = /mnt/Newton
mount-2 = /mnt/Tesla
fixed-values = true
label-mounted = "%{F#9751ae}ÔÇ†  %mountpoint%:%{F-} %used%%{F#9751ae}, %free% left%{F-}      "
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/wireless]
type = internal/network
interval = 5
interface = wlp6s0
label-connected = %{F#9751ae}Ôá´%{F-}  %essid% %{F#9751ae}%local_ip%%{F-}     %{F#9751ae}ÔÇì%{F-}  %upspeed%     %{F#9751ae}ÔÄô%{F-}  %downspeed%

[module/cpu]
type = internal/cpu
interval = 1
format-prefix = "CPU: "
format-prefix-foreground = ${colors.foreground-alt}
format = <label> <ramp-coreload>
label = %percentage%%
ramp-coreload-spacing = 1
ramp-coreload-0 = %{F#CCFF00}‚ñÅ%{F-}
ramp-coreload-1 = %{F#CCE800}‚ñÇ%{F-}
ramp-coreload-2 = %{F#CCD100}‚ñÉ%{F-}
ramp-coreload-3 = %{F#CCB900}‚ñÑ%{F-}
ramp-coreload-4 = %{F#CCA200}‚ñÖ%{F-}
ramp-coreload-5 = %{F#CC7400}‚ñÜ%{F-}
ramp-coreload-6 = %{F#CC5D00}‚ñá%{F-}
ramp-coreload-7 = %{F#CC4600}‚ñà%{F-}

[module/system-nvidia-smi]
type = custom/script
exec = ~/.config/polybar/system-nvidia-smi.sh
exec-if = command -v nvidia-smi
interval = 3
format-prefix = "GPU: "
format-prefix-foreground = ${colors.foreground-alt}
label = %output%%

[module/memory]
type = internal/memory
interval = 3
format-prefix = "RAM: "
format-prefix-foreground = ${colors.foreground-alt}
label = %gb_used%%{F#9751ae}, %gb_total% total%{F-}

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60
format = <ramp> <label>
format-warn = <ramp> <label-warn>
format-warn-underline = #f50a4d
label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.secondary}
ramp-0 = TEMP:
ramp-1 = TEMP:
ramp-2 = TEMP:
ramp-foreground = ${colors.foreground-alt}

[settings]
screenchange-reload = true

